// can not use square. use case [top/left/bottom/right]
retina-border(_direction='none', _color=rgb(200,200,220), _dom=before)
  position relative
  
  &:{_dom}
    content ''
    position absolute
    
    if _direction == 'left'
      border-left 1px _color solid
      width 2px
      height 100%
      top 0
      left 0
      transform scaleX(0.5)
    
    if _direction == 'right'
      border-right 1px _color solid
      width 2px
      height 100%
      top 0
      right .5px
      transform scaleX(0.5)
    
    if _direction == 'top'
      border-top 1px _color solid
      width 100%
      height 2px
      top 0
      left 0
      transform scaleY(0.5)
    
    if _direction == 'bottom'
      border-bottom 1px _color solid
      width 100%
      height 2px
      bottom .5px
      left 0
      transform scaleY(0.5)